<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_openCourse"
        android:layout_width="188dp"
        android:layout_height="64dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="444dp"
        android:onClick="btn_openCourse_onClick"
        android:text="Course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_openExecute"
        android:layout_width="188dp"
        android:layout_height="64dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="532dp"
        android:onClick="btn_Excure_onClick"
        android:text="Execute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edit_moto"
        android:layout_width="312dp"
        android:layout_height="162dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/fontstyle"
        android:text="Win a better life \nby doing your best \n -Chelina-"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>