<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_openCourse"
        android:layout_width="188dp"
        android:layout_height="64dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="312dp"
        android:onClick="btn_openCourse_onClick"
        android:text="Course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_openExecute"
        android:layout_width="188dp"
        android:layout_height="64dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="400dp"
        android:onClick="btn_Excure_onClick"
        android:text="Execute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_FileWrite"
        android:layout_width="106dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="608dp"
        android:onClick="btn_FileWrite_onClick"
        android:text="File Write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Blog"
        android:layout_width="106dp"
        android:layout_height="62dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="608dp"
        android:onClick="btn_Blog_onClick"
        android:text="go Blog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edit_moto"
        android:layout_width="174dp"
        android:layout_height="71dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="164dp"
        android:text="get better life \n if you can"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>